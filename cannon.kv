<Projectile>:
    size: self.projectile_height, self.projectile_width
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            
<Cannon>:
    size: 100, 30
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            origin: self.x + 15, self.center_y
    canvas:
        Rectangle:
            pos: self.x + 15, self.center_y - 15
            size: self.size
    canvas.after:
        PopMatrix
<CannonGame>:
    cannon: cannon
    projectile: projectile
    Cannon:
        id: cannon
        angle: 0
    Projectile:
        id: projectile
    Target:
        id: target
        size: 20, 20
        pos: self.parent.width - 120, self.parent.height / 2 - 10

<Target@Widget>:
    canvas:
        Ellipse:
            size: self.size
            pos: self.pos