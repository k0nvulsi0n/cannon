<Projectile>:
    size: self.projectile_height, self.projectile_width
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Cannon>:
    size: 100, 30
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            origin: self.x + 15, self.center_y
    canvas:
        Rectangle:
            pos: self.x + 15, self.center_y - 15
            size: self.size
    canvas.after:
        PopMatrix

<CannonGame>:
    cannon: cannon
    projectile: projectile
    Cannon:
        id: cannon
        angle: 0
    Projectile:
        id: projectile
