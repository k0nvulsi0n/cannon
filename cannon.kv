<Projectile>:
    size: self.projectile_height, self.projectile_width
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle 
            origin: self.center
        Ellipse:
            pos: self.pos
            size: self.size
            source: self.texture_source
        PopMatrix
<Cannon>:
    size: 100, 30
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            origin: self.x + 15, self.center_y
    canvas:
        Rectangle:
            pos: self.x + 15, self.center_y - 15
            size: self.size
            source: 'assets/cannon_texture.png'
    canvas.after:
        PopMatrix

<Target>:
    canvas:
        Ellipse:
            size: self.height, self.width
            pos: self.x, self.y
            source: 'assets/default.jpg'
<CannonGame>:
    cannon: cannon
    projectile: projectile
    target: target
    Projectile:
        id: projectile
    Cannon:
        id: cannon
        angle: 0
    Target:
        id: target

